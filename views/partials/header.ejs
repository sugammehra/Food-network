<body>

<nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">𝕮𝖔𝖔𝖐𝖎𝖓𝖌𝕯𝖊𝖑𝖎𝖈𝖆𝖈𝖎𝖊𝖘</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#newMenu"
            aria-controls="newMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="newMenu">
            <div class="navbar-nav">
               <a class="nav-link" href="/">Home</a>
               <a class="nav-link" href="/recipes">View Recipes</a>
               <% if(currentUser && currentUser.username==="sugam@gmail.com") {%>
                    <a class="nav-link" href="/add">Add Recipe</a>
               <% } else {%>
                    <a class="nav-link" href="/join">Join Us</a>
               <% } %>
            </div>
            <div class="navbar-nav ml-auto navbar-right">
                <a class="nav-link" href="https://www.instagram.com/cookingdelicacies/"><i class="fab fa fa-instagram"></i></a>
                <% if(!currentUser) {%>
                   <a class="nav-link" href="/login">Login</a>
                   <a class="nav-link" href="/signup">Sign Up</a>
                <% } else {%>
                    <a href="" id="currentUser">Signed In as <%= currentUser.username %></a>
                    <a class="nav-link" href="/logout">Logout</a>
                <% } %>
            </div>
        </div>
    </div>
</nav>
<div id="flash" class="container">
    <% if(error && error.length>0){ %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <%} %>
    <% if(success && success.length>0){ %>
        <div class="alert alert-success" role="alert">
            <p style="text-align: center;"><%= success %></p>
        </div>
    <%} %>
</div>

<style>
    .alert-success,.alert-danger {
    height: 40px;
    padding-top: 2px;
    }
    #currentUser{
        color: white;
        margin: auto;
    }
    #flash{
        margin-top: 10px;
        margin-bottom: 10px;
    }

</style>